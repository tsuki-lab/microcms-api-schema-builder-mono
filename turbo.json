{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "publish": {
      "dependsOn": ["^publish"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
