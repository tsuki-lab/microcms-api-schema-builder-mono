    "schema",
    "typescript"
  ],
  "author": "hanetsuki<me@tsuki-lab.net>",
  "license": "MIT",
  "dependencies": {
    "microcms-field-types": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.8.6",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "esbuild": "^0.19.4",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  }
}
